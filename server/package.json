{
  "name": "takashi-photos",
  "version": "1.0.0",
  "description": "Backend for Takashi's photography portfolio website.",
  "main": "hono/server.ts",
  "scripts": {
    "start": "tsx hono/server.ts",
    "dev": "tsx watch hono/server.ts",
    "build": "tsc -p tsconfig.json",
    "build:ui": "rm -rf dist && cd ../client && npm run build && mv dist ../server",
    "lint": "pnpm run typecheck",
    "typecheck": "tsc -p tsconfig.json",
    "db:generate": "node_modules/.bin/drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "node_modules/.bin/drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "node_modules/.bin/drizzle-kit studio --config drizzle.config.ts",
    "db:push": "node_modules/.bin/drizzle-kit push --config drizzle.config.ts",
    "cloud:batch": "node hono/scripts/batch-cloudinary-import.js",
    "cloud:usage": "node hono/scripts/cloudinary-usage.js",
    "smoke:api": "node hono/scripts/smoke-api.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.37.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.6.10",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.16.0",
    "tsx": "^4.19.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.3.3",
    "@types/pg": "^8.15.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^2.0.22",
    "typescript": "^5.4.5",
    "@types/node": "^20.12.7"
  }
}
