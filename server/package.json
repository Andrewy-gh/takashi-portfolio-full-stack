{
  "name": "takashi-photos",
  "version": "1.0.0",
  "description": "Backend for Takashi's photography portfolio website.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build:ui": "rm -rf dist && cd ../client && npm run build && mv dist ../server",
    "typecheck": "tsc -p tsconfig.json",
    "db:generate": "node_modules/.bin/drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "node_modules/.bin/drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "node_modules/.bin/drizzle-kit studio --config drizzle.config.ts",
    "db:push": "node_modules/.bin/drizzle-kit push --config drizzle.config.ts",
    "db:migrate:mongo": "node hono/scripts/migrate-mongo-to-postgres.js",
    "cloud:batch": "node hono/scripts/batch-cloudinary-import.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cloudinary": "^1.37.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.3.1",
    "pg": "^8.16.0",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.3.3",
    "@types/pg": "^8.15.5",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^2.0.22",
    "typescript": "^5.4.5",
    "@types/node": "^20.12.7"
  }
}
