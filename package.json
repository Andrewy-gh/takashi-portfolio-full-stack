{
  "name": "takashi-portfolio-monorepo",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "concurrently -k -n server,client,dashboard \"pnpm -C server dev\" \"pnpm -C client dev\" \"pnpm -C dashboard dev\"",
    "dev:stop": "powershell -NoProfile -Command \"Get-CimInstance Win32_Process | Where-Object { $_.Name -eq 'node.exe' -and $_.CommandLine -match 'takashi-portfolio-full-stack' } | ForEach-Object { Stop-Process -Id $_.ProcessId -Force }\"",
    "dev:stop:bash": "bash scripts/dev-stop.sh",
    "build": "pnpm -r --stream --if-present build",
    "lint": "pnpm -r --stream --if-present lint",
    "typecheck": "pnpm -r --stream --if-present typecheck",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
