{
  "name": "server-v2",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env.development src/index.ts",
    "db:init": "tsx --env-file=.env.development src/scripts/init-db.ts",
    "db:reset": "docker exec mongodb-container mongosh --eval \"db.dropDatabase()\"",
    "db:fetch": "tsx --env-file=.env src/scripts/fetch-data.ts",
    "db:seed": "tsx --env-file=.env.development src/scripts/seed-images.ts",
    "session": "tsx --env-file=.env.development src/scripts/session.ts",
    "test": "NODE_ENV=test vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "hono": "^4.6.16",
    "mongoose": "^8.9.3",
    "multer": "1.4.5-lts.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "tsx": "^4.7.1",
    "vitest": "^3.0.2"
  }
}
